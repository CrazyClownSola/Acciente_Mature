<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Bigger_Default_Title" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/color_default_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Text_User_Name">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="collapsed_text_color">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="expanded_text_color">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomTabTextStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">false</item>
    </style>


    <style name="Radio_Button_Default" parent="TextAppearance.AppCompat">
        <item name="android:gravity">center</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textColor">@color/color_default_black</item>
    </style>

</resources>